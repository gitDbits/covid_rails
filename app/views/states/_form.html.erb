<%= form_with(model: state, local: true) do |form| %>
<% if state.errors.any? %>
<div id="error_explanation" class="alert alert-danger" role="alert">
  <h2><%= pluralize(state.errors.count, "erros") %> encontrados:</h2>
  <ul>
    <% state.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-group text-uppercase">
  <strong><%= form.label :uf, for: 'state_uf' %></strong>
  <%= form.text_field :uf, class: 'form-control', placeholder: 'Informe a UF' %>
</div>
<div class="form-group text-uppercase">
  <strong><%= form.label :name, for: 'state_name' %></strong>
  <%= form.text_field :name, class: 'form-control', placeholder: 'Informe o nome da cidade' %>
</div>
<div class="text-center">
  <%= form.button class: 'btn btn-success btn-lg' do %>
  <i class="fa fa-check-circle"></i>
  SALVAR
  <% end %>
</div>
<% end %>